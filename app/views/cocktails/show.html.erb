<div class="container">

 <h1><%= @cocktail.name %></h1>

 <% @cocktail.doses.each do |dose| %>
 <strong><%= dose.description %></strong>
 <%= dose.ingredient.name %>
 <%= link_to "delete dosage", dose_path(dose), method: :delete, class: "btn btn-warning" %>
 <%end%>

<br>

<p style="margin-top: 30px">
 <%= link_to "Add Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
 <%= link_to "Return to list", cocktails_path, class: "btn btn-info" %>
</p>
</div>
